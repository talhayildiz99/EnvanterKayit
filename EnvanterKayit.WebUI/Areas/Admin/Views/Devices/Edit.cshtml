@model EnvanterKayit.Entities.Cihaz

@{
    ViewData["Title"] = "Cihazı Düzenle";
}

<h1>Cihazı Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MarkaId" class="control-label"></label>
                <select asp-for="MarkaId" class="form-select" asp-items="ViewBag.MarkaId"></select>
                <span asp-validation-for="MarkaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurId" class="control-label"></label>
                <select asp-for="TurId" class="form-select" asp-items="ViewBag.TurId"></select>
                <span asp-validation-for="TurId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Renk" class="control-label"></label>
                <input asp-for="Renk" class="form-control" />
                <span asp-validation-for="Renk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modeli" class="control-label"></label>
                <input asp-for="Modeli" class="form-control" />
                <span asp-validation-for="Modeli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="İslemcisi" class="control-label"></label>
                <input asp-for="İslemcisi" class="form-control" />
                <span asp-validation-for="İslemcisi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EkranKartı" class="control-label"></label>
                <input asp-for="EkranKartı" class="form-control" />
                <span asp-validation-for="EkranKartı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeriNo" class="control-label"></label>
                <input asp-for="SeriNo" class="form-control" />
                <span asp-validation-for="SeriNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelYili" class="control-label"></label>
                <input asp-for="ModelYili" class="form-control" />
                <span asp-validation-for="ModelYili" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SatistaMi" /> @Html.DisplayNameFor(model => model.SatistaMi)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Notlar" class="control-label"></label>
                <input asp-for="Notlar" class="form-control" />
                <span asp-validation-for="Notlar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>